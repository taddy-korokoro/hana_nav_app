/レビュー星評価 travel_recordからrender
  / indexとshowで使用
- if action_name == 'index' || action_name == 'show'
  javascript:
    $('#star-rate-#{travel_record.id}').raty({
      size     : 36,
      starOff: "#{asset_path('star-off.png')}",
      starOn: "#{asset_path('star-on.png')}",
      starHalf: "#{asset_path('star-half.png')}",
      half: true,
      readOnly: true,
      score: #{travel_record.review},
    });
- else
  / editで使用
  - if @travel_record.review.present?
    javascript:
      $('#star-rate-#{@travel_record.id}').raty({
        size     : 36,
        starOff: "#{asset_path('star-off.png')}",
        starOn: "#{asset_path('star-on.png')}",
        starHalf: "#{asset_path('star-half.png')}",
        half: true,
        score: #{@travel_record.review},
      });
  / newで使用
  - else
    javascript:
      $('#star').raty({
        size     : 36,
        starOff: "#{asset_path('star-off.png')}",
        starOn: "#{asset_path('star-on.png')}",
        starHalf: "#{asset_path('star-half.png')}",
        scoreName: 'travel_record[review]',
        half: true,
      });