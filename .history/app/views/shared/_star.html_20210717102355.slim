/ ----- レビュー星評価の実装 -----
/ ----- 'travel_records/index,show','spots/index,show'で使用中 -----
- if action_name == 'index' || action_name == 'show'
  javascript:
    $('#star-rate-#{travel_record.id}').raty({
      size     : 36,
      starOff: "#{asset_path('star-off.png')}",
      starOn: "#{asset_path('star-on.png')}",
      starHalf: "#{asset_path('star-half.png')}",
      half: true,
      readOnly: true,
      score: #{travel_record.review},
    });
- else
  / ----- 'travel_record/edit'で使用中 -----
  - if @travel_record.review.present?
    javascript:
      $('#star-rate-#{@travel_record.id}').raty({
        size     : 36,
        starOff: "#{asset_path('star-off.png')}",
        starOn: "#{asset_path('star-on.png')}",
        starHalf: "#{asset_path('star-half.png')}",
        half: true,
        score: #{@travel_record.review},
        scoreName: 'travel_record[review]'
      });
  / ----- 'travel_record/new'で使用中 -----
  - else
    javascript:
      $('#star').raty({
        size     : 36,
        starOff: "#{asset_path('star-off.png')}",
        starOn: "#{asset_path('star-on.png')}",
        starHalf: "#{asset_path('star-half.png')}",
        scoreName: 'travel_record[review]',
        half: true,
      });