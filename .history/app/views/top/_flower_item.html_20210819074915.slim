/ ----- 'top/index'で使用中 -----
.flower-list.container
  .row
    - flower_items.each do |flower_item|
      - flower_item.flower_item_seasons.each do |item|
        - if item.season.month_name == "#{month_name}月"
          = link_to flower_item_path(item.flower_item.id), class: "flower col-4"
            .flower-image
              = image_tag item.flower_item.image.to_s, class: "image"
            .flower-body
              .season
                = item.flower_item.time
              .name
                = item.flower_item.name
              .feature
                = item.flower_item.feature.truncate(70)